<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <Switch
        android:id="@+id/switch_IsListenEnable"
        android:layout_width="45dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/btn_listenitem_delete"
        android:layout_width="45dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/red_btn_selector"
        android:text="@string/delete"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/listen_infoArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_his_cancel"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:padding="10.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_listen_housename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="信息馆"
                android:textColor="@color/btn_text"
                android:textSize="15dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_listen_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/address"
            android:textColor="@color/gray_font" />

        <TextView
            android:id="@+id/tv_listen_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="8:00-12:00"

            android:textColor="@color/black" />
    </LinearLayout>

</RelativeLayout>